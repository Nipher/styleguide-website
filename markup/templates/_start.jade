include ../organisms/_head.jade

+hero_inner('Getting Started')

main.inner	
		.image.no-margin.inner
			.container
				img(src="images/gif1.gif")

		.section.u-cf.inner#how-t-use
			.container
				.row
					.ten.columns.center
						+title('How to use')
						!=partial('content/en_US/getting-started/how-to-use.md')
		.section.u-cf.inner#mac
			.container
				.row
					.ten.columns.center
						+title('Mac')
						!=partial('content/en_US/getting-started/mac.md')
						+button_primary('https://github.com/hugeinc/styleguide/archive/master.zip', 'Download Mac Version')
		.section.u-cf.inner#windows-linux
			.container
				.row
					.ten.columns.center
						+title('Windows/Linux')
						!=partial('content/en_US/getting-started/windows-linux.md')
						+button_primary('https://github.com/hugeinc/styleguide/archive/windows-linux.zip', 'Download Win/Linux Version')
		.section.u-cf.inner#manual-install
			.container
				.row
					.ten.columns.center
						+title('Manual installation')
						!=partial('content/en_US/getting-started/manual-install.md')
		.section.u-cf.inner.no-border#know-issues
			.container
				.row
					.ten.columns.center
						+title('Know issues')
						!=partial('content/en_US/getting-started/know-issues.md')

include ../organisms/_footer.jade